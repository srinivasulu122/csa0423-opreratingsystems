#include <stdio.h>
#include <stdlib.h>

void fcfs(int arr[], int size, int head) {
    int seek_count = 0, distance, cur_track;
    printf("Seek Sequence is:\n");
    for (int i = 0; i < size; i++) {
        cur_track = arr[i];
        printf("%d ", cur_track);
        distance = abs(cur_track - head);
        seek_count += distance;
        head = cur_track;
    }
    printf("\nTotal seek operations: %d\n", seek_count);
}

int main() {
    int arr[] = {98, 183, 37, 122, 14, 124, 65, 67};
    int head = 53;
    int size = sizeof(arr) / sizeof(arr[0]);
    fcfs(arr, size, head);
    return 0;
}
